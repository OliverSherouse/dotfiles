#!/bin/bash
if [[ -f /usr/share/bash-completion/completions/pacman ]]; then
    source /usr/share/bash-completion/completions/pacman
fi

function pacin {
    $PACMAN -S $@
}

function pacrm {
    sudo pacman -Rscu $@
}

function pacsearch {
    if [[ -n "$(type -P unbuffer)" ]]; then
        unbuffer $PACMAN -Ss $@ | less
    else
        echo "Install expect for color!"
        $PACMAN -Ss $@ | less
    fi
}

function pacshow {
    $PACMAN -Si $@
}

function pacup {
    $PACMAN -Su --noconfirm
}

function pacup-force {
    $PACMAN -Syyu --noconfirm --devel
}

function pacorphan {
    ORPHANS=$(pacman -Qqtd)
    if [[ -n "$ORPHANS" ]]; then
        sudo pacman -Rcsu $ORPHANS
    fi
}

function paclist {
    if [[ -n "$2" ]]; then
        pacman -Ql $1 | grep -e $2
    else
        pacman -Ql $1
    fi
}

function pacowns {
    pacman -Qo $@
}

_available(){
    local cur opts prev
    COMPREPLY=()
    _get_comp_words_by_ref cur prev
    _pacman_pkg Slq
}

_installed(){
    local cur opts prev
    COMPREPLY=()
    _get_comp_words_by_ref cur prev
    _pacman_pkg Qq
}

complete -F _installed pacrm
complete -F _available pacin
complete -F _available pacshow
complete -F _installed paclist

_require(){
    if [[ -z $(type -P $1) ]]; then
        echo "$1 required"
        return 0
    fi

}

aur_update() {
    _require packer
    _require aurploader
    cd /tmp
    for i in $*; do
        packer -G $i
        cd $i
        /usr/bin/makepkg -s
        makepkg --source
        aurploader -k *.src.*
        cd ..
        rm -rf $i
    done
    pacorphan
}

engage() {
    if [[ -n "$(type -P play)" ]]; then
        play -n synth whitenoise band -n 100 24 band -n 300 100 gain +20
    else
        echo "I cannae do it Captain! I just don't have the power! Also, install sox"
    fi
}

clean_root() {
    pacorphan
    sudo pacman -Sc
}

pyproj() {
    if [[ -n $1 ]]; then
        wget -O- https://github.com/pypa/sampleproject/archive/master.tar.gz | tar -xz
        if [[ ! -d $1 ]]; then
            mkdir $1;
        fi
        cp -r sampleproject-master/* $1
        rm -r sampleproject-master
    else
        echo "USAGE: pyproj NAME"
    fi
}

page(){
    if [[ -n "$(type -P unbuffer)" ]]; then
        unbuffer $@ | less
    else
        echo "Install expect for color!"
        $@ | less
    fi
}
