#! /bin/bash

[[ -n "$(type -P hub)" ]] && alias git='hub'
[[ -n "$(type -P vim)" ]] && alias view='vim -R'
alias df='df -h'
alias du='du -h'
alias grep='grep --color=auto'
alias grub_regen='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias gvim='vim'
alias large='du -ad1 | head -n-1 | sort -hr | head'
alias less='less -r'
alias ls='ls -hF --color=auto --group-directories-first'
alias makepkg='makepkg -sri'
alias powertop='sudo powertop'
alias ps='ps --forest'
alias scratchpad='jupyter notebook --browser=chromium'
alias serve='python -m http.server'
alias sl='ls'
alias systemctl='sudo systemctl'
