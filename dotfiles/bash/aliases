#! /bin/bash

alias df='df -h'
alias du='du -h'
alias ls='ls -hF --color=auto --group-directories-first'
alias sl='ls'
alias grep='grep --color=auto'
alias large='du -ad1 | head -n-1 | sort -hr | head'
alias makepkg='makepkg -sri'
alias ps='ps --forest'
[[ -n "$(type -P hub)" ]] && alias git='hub'
[[ -n "$(type -P vim)" ]] && alias less='/usr/share/vim/vim82/macros/less.sh'
[[ -n "$(type -P vim)" ]] && alias view='/usr/share/vim/vim82/macros/less.sh'
[[ -n "$(type -P vim)" ]] && alias gvim='vim'
[[ -n "$(type -P powertop)" ]] && alias powertop='sudo powertop'
[[ -n "$(type -P python)" ]] && alias serve='python -m http.server'
