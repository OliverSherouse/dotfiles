{
  "$schema": "https://opencode.ai/config.json",
  "enabled_providers": ["openai"],
  "small_model": "openai/gpt-5.2",
  "provider": {
    "openai": {
      "options": {
        "timeout": 600000
      }
    }
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "model": "openai/gpt-5.2"
    },
    "build": {
      "mode": "primary",
      "model": "openai/gpt-5.2-codex"
    }
  },
  "share": "manual",
  "autoupdate": "notify",
  "watcher": {
    "ignore": [
      ".git/**",
      "node_modules/**",
      ".venv/**",
      "__pycache__/**",
      ".ruff_cache/**",
      ".mypy_cache/**",
      ".pytest_cache/**",
      ".tox/**",
      ".terraform/**",
      "dist/**",
      "build/**",
      "coverage/**"
    ]
  },
  "lsp": {
    "pyright": { "disabled": true },
    "ruff": {
      "command": ["ruff-lsp-venv"],
      "extensions": [".py"]
    },
    "ty": {
      "command": ["ty-lsp-venv"],
      "extensions": [".py"]
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  }
}
