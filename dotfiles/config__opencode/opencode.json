{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "pyright": { "disabled": true },
    "ruff": {
      "command": ["ruff-lsp-venv"],
      "extensions": [".py"]
    },
    "ty": {
      "command": ["ty-lsp-venv"],
      "extensions": [".py"]
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  }
}
