#! /bin/bash
alias ls='ls -hF --color=auto --group-directories-first'
alias sl='ls'
alias grep='grep --color=auto'
alias less='less -r'
alias powertop='sudo powertop'
alias netcfg='sudo netcfg'
alias makepkg='makepkg -si'
alias df='df -h'
alias du='du -h'
alias large='du -hd1 --all | sort -hr | tail -n+2 | head'
alias ps='ps --forest'
alias serve='python -m http.server'
alias listwl='sudo iwlist wlan0 scanning|grep ESSID'
[[ -n "$(type -P vim)" ]] && alias view='vim -R'
